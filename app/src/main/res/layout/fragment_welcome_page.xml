<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.youth.banner.Banner
        xmlns:banner="http://schemas.android.com/apk/res-auto"
        android:id="@+id/welcome_page_banner"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        banner:banner_auto_loop="false"
        banner:banner_infinite_loop="false"
        banner:banner_indicator_normal_color="@android:color/white"
        banner:banner_indicator_selected_color="@android:color/holo_green_light"/>

</androidx.constraintlayout.widget.ConstraintLayout>